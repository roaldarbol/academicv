{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/roaldarbol/academicv/main/cv.typ.schema.json",
  "type": "object",
  "default": {},
  "title": "Academic CV data schema",
  "required": [
    "personal",
    "sections"
  ],
  "properties": {
    "settings": {
      "type": "object",
      "properties": {
        "headingfont": { "type": "string" },
        "bodyfont": { "type": "string" },
        "fontsize": { 
          "type": "string",
          "description": "Font size with unit, e.g. '10pt'"
        },
        "linespacing": { 
          "type": "string",
          "description": "Line spacing within elements with unit, e.g. '5pt'"
        },
        "sectionspacing": { 
          "type": "string",
          "description": "Spacing between major sections with unit, e.g. '12pt'"
        },
        "entry_spacing": { 
          "type": "string",
          "description": "Spacing between entries within a section, e.g. '0.5em'"
        },
        "element_spacing": { 
          "type": "string",
          "description": "Spacing between elements within an entry (primary/secondary/tertiary), e.g. '2pt'"
        },
        "show_address": { "type": "boolean" },
        "show_number": { "type": "boolean" },
        "show_title": { "type": "boolean" },
        "headingsmallcaps": { "type": "boolean" },
        "sendnote": { "type": "boolean" },
        "hyperlink_color": { 
          "type": "string", 
          "description": "Color for hyperlinks in format 'rgb(r, g, b)', 'rgba(r, g, b, a)', or hex like '#577FE6'"
        },
        "page": {
          "type": "object",
          "properties": {
            "paper": { 
              "type": "string",
              "description": "Paper size like 'a4', 'letter', etc." 
            },
            "numbering": { 
              "type": "string",
              "description": "Page numbering format, e.g. '1 / 1'"
            },
            "number-align": { 
              "type": "string", 
              "enum": ["center", "left", "right"],
              "description": "Alignment of page numbers"
            },
            "margin": { 
              "type": "string",
              "description": "Page margin with unit, e.g. '3.5cm'"
            }
          }
        }
      }
    },
    "personal": {
      "type": "object",
      "default": {},
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "default": ""
        },
        "email": {
          "type": [
            "string",
            "null"
          ],
          "format": "email",
          "default": ""
        },
        "phone": {
          "type": [
            "string",
            "null"
          ],
          "default": ""
        },
        "url": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri",
          "default": ""
        },
        "titles": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string"
            }
        },
        "location": {
          "type": [
            "object",
            "null"
          ],
          "default": {},
          "required": [
            "city",
            "region",
            "country"
          ],
          "properties": {
            "city": {
              "type": "string",
              "default": ""
            },
            "region": {
              "type": "string",
              "default": ""
            },
            "country": {
              "type": "string",
              "default": ""
            },
            "postalCode": {
              "type": "integer",
              "default": 0
            }
          }
        },
        "profiles": {
          "type": "array",
          "default": [],
          "items": {
            "type": "object",
            "required": [
              "network",
              "username",
              "url"
            ],
            "properties": {
              "network": {
                "type": "string"
              },
              "username": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        }
      }
    },
    "sections": {
      "type": "array",
      "description": "Defines the structure and content of each CV section",
      "items": {
        "type": "object",
        "required": ["key", "layout"],
        "properties": {
          "key": {
            "type": "string",
            "description": "Unique identifier for the section"
          },
          "layout": {
            "type": "string",
            "description": "The layout type to use for this section",
            "enum": ["heading", "timeline", "timeline_title", "numbered_list", "prose"]
          },
          "title": {
            "type": "string",
            "description": "Display title for the section"
          },
          "show": {
            "type": "boolean",
            "default": true,
            "description": "Whether to display this section"
          },
          "primary_element": {
            "oneOf": [
              {
                "type": "string",
                "description": "Primary element to display in bold (first one only)"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "List of primary elements with the first one displayed in bold"
              }
            ]
          },
          "secondary_element": {
            "oneOf": [
              {
                "type": "string",
                "description": "Secondary element to display in italic"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "List of secondary elements to display in italic"
              }
            ]
          },
          "tertiary_element": {
            "oneOf": [
              {
                "type": "string",
                "description": "Tertiary element to display in small text"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "List of tertiary elements to display in small text"
              }
            ]
          },
          "entries": {
            "oneOf": [
              {
                "type": "array",
                "description": "Array of entries for education, experience, teaching, publications, etc.",
                "items": {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "institution": { "type": "string" },
                        "location": { "type": "string" },
                        "title": { "type": "string" },
                        "start_date": { "type": ["string", "number"] },
                        "end_date": { "type": ["string", "number", "null"] },
                        "description": { "type": "string" },
                        "advisors": { 
                          "type": "array",
                          "items": { "type": "string" },
                          "description": "List of advisors, displayed with 'Advisor:' in italic"
                        },
                        "professors": {
                          "type": "array",
                          "items": { "type": "string" },
                          "description": "List of professors, displayed with 'Professor:' in italic"
                        },
                        "supervisors": {
                          "type": "array",
                          "items": { "type": "string" },
                          "description": "List of supervisors, displayed with 'Supervisor:' in italic"
                        }
                      }
                    },
                    {
                      "type": "string",
                      "description": "For numbered lists like publications"
                    }
                  ]
                }
              },
              {
                "type": "string",
                "description": "For prose sections with continuous text"
              }
            ]
          }
        }
      }
    },
    "skills": {
      "type": "array",
      "description": "Skill categories and items",
      "items": {
        "type": "object",
        "required": ["category", "skills"],
        "properties": {
          "category": {
            "type": "string",
            "description": "Skill category name"
          },
          "skills": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Skills within this category"
          }
        }
      }
    },
    "languages": {
      "type": "array",
      "description": "Languages and proficiency levels",
      "items": {
        "type": "object",
        "required": ["language", "fluency"],
        "properties": {
          "language": {
            "type": "string",
            "description": "Language name"
          },
          "fluency": {
            "type": "string",
            "description": "Proficiency level"
          }
        }
      }
    }
  }
}